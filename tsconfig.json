{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "module": "ES6",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "DOM",
            "ES2015"
        ],
        "moduleResolution": "Node"
    },
    "include": [
        "src/**/*"
